
@model IEnumerable<MVC.Models.Hotel>
@{
    ViewBag.Title = "FormulaireGroupe";

}


<h1>Valais Booking</h1>
<h2>Recherchez les chambres libres et réservez pour le groupe en un clic !</h2>
<p style="color:red">Les prix varient en fonction du pourcentage d'occupation</p>
<div class="container-fluid" style="background-image:url(http://files.gandi.ws/gandi57803/image/banniere.jpg)">
    @using (Html.BeginForm("SearchGroupe", "Search", FormMethod.Post))
    {
        <br /><br />
              <div class="row">
                  <div class="col-sm-2">
                      <label for="nomlieu">Lieu de l'hôtel</label><br />
                      <select class="form-control" name="nomlieu">
                          <option>Brig</option>
                          <option>Martigny</option>
                          <option>Sion</option>
                      </select>
                  </div>
                  <div class="col-sm-2">
                      <label for="entre">Entrée</label><br />
                      <input type="text" value="@DateTime.Now.AddDays(0).ToString("yyyy-MM-dd")" class="form-control-static" style="vertical-align:top" name="entre" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" title="yyyy-MM-dd" required>

                  </div>
                  <div class="col-sm-2">
                      <label for="sort">Sortie</label><br />
                      <input type="text" size="10" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" class="form-control-static" style="text-anchor:middle" name="sort" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" title="yyyy-MM-dd" required>

                  </div>
                  <div class="col-sm-2">
                      <label for="simple">Chambres simples</label><br />
                      <select class="form-control" name="simple">
                          <option>0</option>
                          <option>1</option>
                          <option>2</option>
                          <option>3</option>
                          <option>4</option>
                          <option>5</option>
                          <option>6</option>
                          <option>7</option>
                          <option>8</option>
                          <option>9</option>
                          <option>10</option>
                          <option>11</option>
                          <option>12</option>
                          <option>13</option>
                          <option>14</option>
                          <option>15</option>
                          <option>16</option>
                          <option>17</option>
                          <option>18</option>
                          <option>19</option>
                          <option>20</option>
                      </select>
                  </div>
                  <div class="col-sm-2">
                      <label for="doubles">Chambres doubles</label><br />
                      <select class="form-control" name="doubles">
                          <option>0</option>
                          <option>1</option>
                          <option>2</option>
                          <option>3</option>
                          <option>4</option>
                          <option>5</option>
                          <option>6</option>
                          <option>7</option>
                          <option>8</option>
                          <option>9</option>
                          <option>10</option>
                          <option>11</option>
                          <option>12</option>
                          <option>13</option>
                          <option>14</option>
                          <option>15</option>
                          <option>16</option>
                          <option>17</option>
                          <option>18</option>
                          <option>19</option>
                          <option>20</option>
                      </select>
                  </div>
                  <center>
                      <div class="col-sm-2">
                          <p></p><br />
                          <button type="submit" class="btn-warning">Rechercher</button>
                      </div>
                  </center>
              </div>
    }
    <br /><br /><br /><br /><br /><br /><br />
</div>
<br />

<div>
    @Html.ActionLink("Accueil", "Index")
</div>





























