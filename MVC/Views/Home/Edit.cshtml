@model MVC.ViewModels.ToutesMesListes

@{
    ViewBag.Title = "Edit";

}

<div class="form-horizontal" style="background-image:url(http://www.hotel-r.net/im/hotel/fr/bambou-zen-8.jpg)">
    @using (Html.BeginForm("AdvancedSearch", "Search", FormMethod.Post))
    {
        <br />
        <h1>Valais Booking</h1>
        <p style="color:red">Les prix varient en fonction du pourcentage d'occupation</p><br />
        <div>
            <label class="control-label col-sm-2" for="lieu">Lieu</label>
            <select class="form-control" name="nomlieu">
                <option>Brig</option>
                <option>Martigny</option>
                <option>Sion</option>
            </select>
        </div>
        <br />
        <div>
            <label class="control-label col-sm-2" for="entre">Entrée</label>
            <input type="text" value="@DateTime.Now.AddDays(0).ToString("yyyy-MM-dd")" class="form_datetime" style="vertical-align:top" name="entre" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" title="yyyy-MM-dd" required>

        </div><br />
        <div>
            <label class="control-label col-sm-2" for="sort">Sortie</label>
            <input type="text" size="10"  value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" class="form_datetime" style="text-anchor:middle" name="sort" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" title="yyyy-MM-dd" required>

        </div>
        <br />
        <div>
            <label class="control-label col-sm-2" for="categorie">Catégorie de l'hôtel</label>
            <select class="form-control" name="categorie">
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div><br />
        <div>
            <label class="control-label col-sm-2">Wifi</label>
            @Html.CheckBox("wifi", true)
        </div>
        <br />
        <div>
            <label class="control-label col-sm-2">Parking</label>
            @Html.CheckBox("parking", true)
        </div>
        <br />
        <div>
            <label class="control-label col-sm-2" for="type">Simple ou double</label>
            <select class="form-control" id="sel1" name="type">
                <option>1</option>
                <option>2</option>
            </select>
        </div><br />
        <div>
            <label class="control-label col-sm-2" for="prix">Prix</label>
            <select class="form-control" name="prix">
                <option>40</option>
                <option>60</option>
                <option>80</option>
                <option>85</option>
                <option>100</option>
                <option>120</option>
                <option>125</option>
                <option>150</option>
                <option>170</option>
                <option>200</option>
                <option>220</option>
            </select>
        </div>
        <br />

        <div>
            <label class="control-label col-sm-2">TV</label>
            @Html.CheckBox("tv", true)
        </div><br />
        <div>
            <label class="control-label col-sm-2">Sèche-cheveux</label>
            @Html.CheckBox("hairDryer", true)
        </div>
        <br />

        <div>
            <label class="control-label col-sm-2"></label>
            <button type="submit" class="btn-warning">Rechercher</button>
        </div>
        <br /><br />

    }
</div>





<div>
    @Html.ActionLink("Accueil", "Index")
</div>











































