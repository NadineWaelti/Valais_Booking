
@model IEnumerable<MVC.Models.Hotel>
@{
    ViewBag.Title = "Formulaire";

}


<h1>Valais Booking</h1>
<h2>Trouvez les chambres libres des meilleurs hôtels valaisans</h2>
<p style="color:red">Les prix varient en fonction du pourcentage d'occupation</p>
<div class="container-fluid" style="background-image:url(http://files.gandi.ws/gandi57803/image/banniere.jpg)">
    @using (Html.BeginForm("Search", "Search", FormMethod.Post))
    {
        <br /><br />
        <div class="row">
            <div class="col-sm-3">
                <label for="nomlieu">Lieu de l'hôtel</label><br />
                <select class="form-control" name="nomlieu">
                    <option>Brig</option>
                    <option>Martigny</option>
                    <option>Sion</option>
                </select>
            </div>
            <div class="col-sm-2">
                <label for="entre">Entrée</label><br />
                <input type="text"  value="@DateTime.Now.AddDays(0).ToString("yyyy-MM-dd")" class="form-control-static" style="vertical-align:top" name="entre" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" title="yyyy-MM-dd" required>

            </div>
            <div class="col-sm-2">
                <label for="sort">Sortie</label><br />
                <input type="text"  value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" size="10"  class="form-control-static" style="text-anchor:middle" name="sort" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" title="yyyy-MM-dd" required>

            </div><br />
            <center>
                <div class="col-sm-4">
                    <label></label><br />
                    <button type="submit" class="btn-warning">Rechercher</button>

                </div>
            </center>
        </div>
    }
    <br /><br /><br /><br /><br /><br /><br />
</div>
<br />

<div>
    @Html.ActionLink("Accueil", "Index")
</div>





























